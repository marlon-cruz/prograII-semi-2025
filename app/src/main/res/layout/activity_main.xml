<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblNum1"
        android:text="@string/num_1"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtNum1"
        android:hint="@string/ej_5"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblNum2"
        android:text="@string/num_2"
        android:textSize="25sp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtNum2"
        android:hint="@string/ej_4_8"
        android:textSize="25sp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:textSize="15sp"
        android:id="@+id/lblRespuesta"
        android:layout_marginTop="180dp"
        android:layout_marginStart="20dp"
        android:text="@string/respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RadioGroup
        android:id="@+id/radioBtn"
        android:layout_width="375dp"
        android:layout_height="386dp"
        android:layout_alignTop="@+id/lblRespuesta"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >

        <RadioButton
            android:id="@+id/radio_suma"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/suma"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radio_multiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiplicaicon" />

        <RadioButton
            android:id="@+id/radio_resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resta" />

        <RadioButton
            android:id="@+id/radio_divicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divicion" />

        <RadioButton
            android:id="@+id/radio_potencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-180dp"
            android:text="@string/potencia" />

        <RadioButton
            android:id="@+id/radio_porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text="@string/Porcentaje" />
        <RadioButton
            android:id="@+id/radio_factorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text="@string/Factorial" />

        <RadioButton
            android:id="@+id/radio_raiz"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:backgroundTint="@color/btn"
            android:layout_marginStart="200dp"
            android:text="@string/Raiz_cuadrada" />


    </RadioGroup>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblRespuesta"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-280dp"
        android:backgroundTint="#5A4BD7"
        android:text="@string/calcular"
        android:textSize="15sp" />

</RelativeLayout>