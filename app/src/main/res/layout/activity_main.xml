<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tbhConversor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--MONEDAS-->
                <RelativeLayout
                    android:id="@+id/tabMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeMonedas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:text="DE: " />

                    <Spinner
                        android:id="@+id/spnDeMonedas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblDeMonedas"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="-20dp"
                        android:entries="@array/monedas" />

                    <TextView
                        android:id="@+id/lblAMonedas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/spnDeMonedas"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:text="A: " />

                    <Spinner
                        android:id="@+id/spnAMonedas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/spnDeMonedas"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="40dp"
                        android:entries="@array/monedas" />
                </RelativeLayout>
                <!--MASA-->
                <RelativeLayout
                    android:id="@+id/tabMasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeMasa"
                        android:text="DE: "
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/masa"
                        android:id="@+id/spnDeMasa"
                        android:layout_below="@id/lblDeMasa"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAMasa"
                        android:text="A: "
                        android:layout_below="@id/spnDeMasa"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spnAMasa"
                        android:entries="@array/masa"
                        android:layout_below="@id/spnDeMasa"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <!--VOLUMEN-->
                <RelativeLayout
                    android:id="@+id/tabVolumen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeVolumen"
                        android:text="DE: "
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spnDeVolumen"
                        android:entries="@array/volumen"
                        android:layout_below="@id/lblDeVolumen"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAVolumen"
                        android:text="A: "
                        android:layout_below="@id/spnDeVolumen"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/volumen"
                        android:id="@+id/spnAVolumen"
                        android:layout_below="@id/spnDeVolumen"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <!--LONGITUD-->
                <RelativeLayout
                    android:id="@+id/tabLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeLongitud"
                        android:text="DE: "
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/longitud"
                        android:id="@+id/spnDeLongitud"
                        android:layout_below="@id/lblDeLongitud"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblALongitud"
                        android:text="A: "
                        android:layout_below="@id/spnDeLongitud"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/longitud"
                        android:id="@+id/spnALongitud"
                        android:layout_below="@id/spnDeLongitud"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <!--ALMACENAMIENTO-->
                <RelativeLayout
                    android:id="@+id/tabAlmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/lblDeAlmacenamiento"
                        android:text="DE: "
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/almacenamiento"
                        android:id="@+id/spnDeAlmacenamiento"
                        android:layout_below="@id/lblDeAlmacenamiento"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAAlmacenamiento"
                        android:text="A: "
                        android:layout_below="@id/spnDeAlmacenamiento"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/almacenamiento"
                        android:id="@+id/spnAAlmacenamiento"
                        android:layout_below="@id/spnDeAlmacenamiento"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>
                <!--TIEMPO-->
                <RelativeLayout
                    android:id="@+id/tabTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/lblDeTiempo"
                        android:text="DE: "
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/tiempo"
                        android:id="@+id/spnDeTiempo"
                        android:layout_below="@id/lblDeTiempo"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblATiempo"
                        android:text="A: "
                        android:layout_below="@id/spnDeTiempo"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/tiempo"
                        android:id="@+id/spnATiempo"
                        android:layout_below="@id/spnDeTiempo"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>
                <!--TRANSFERENCIA DE DATOS-->
                <RelativeLayout
                    android:id="@+id/tabTransferenciaDatos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/lblDeTransferenciasDatos"
                        android:text="DE: "
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/transferencia"
                        android:id="@+id/spnDeTransferenciasDatos"
                        android:layout_below="@id/lblDeTransferenciasDatos"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblATransferenciasDatos"
                        android:text="A: "
                        android:layout_below="@id/spnDeTransferenciasDatos"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:entries="@array/transferencia"
                        android:id="@+id/spnATransferenciasDatos"
                        android:layout_below="@id/spnDeTransferenciasDatos"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>






    <EditText
        android:hint="Cantidad"
        android:layout_below="@+id/tbhConversor"
        android:layout_marginTop="40dp"
        android:id="@+id/txtCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnCalcular"
        android:layout_below="@+id/txtCantidad"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Calcular"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_below="@+id/btnCalcular"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Respuesta: ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>